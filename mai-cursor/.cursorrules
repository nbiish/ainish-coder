[
  {
    "name": "Ignore other AI tool files",
    "pattern": ".aider*|.copilot*|copilot-instructions.md|mai-aider/*|mai-copilot/*",
    "flags": "g",
    "disabled": false
  },
  {
    "name": "Ignore build artifacts and dependencies",
    "pattern": "**/node_modules/*|**/*.pyc|**/build/*|**/dist/*|.git/*",
    "flags": "g",
    "disabled": false
  },
  {
    "name": "Focus on main code files",
    "pattern": "mai-cursor/*|*.py|*.js|*.ts|*.sh|*.md|*.json|*.yml|*.yaml",
    "flags": "g",
    "disabled": false,
    "highlight": true
  }
]
